<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myapp.pahtan.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:id="@+id/inviteCardView"
        android:layout_width="150dp"
        android:layout_height="140dp"

        app:cardBackgroundColor="#3F51B5"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/inviteImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/invite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <com.myapp.pahtan.CustomTextView
            android:id="@+id/inviteName"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="နတ်ပင့်"
            app:font="mm3.ttf"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/summaryCardView"
        android:layout_width="150dp"
        android:layout_height="140dp"

        app:cardBackgroundColor="#00BCD4"
        android:layout_alignTop="@+id/inviteCardView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/summaryImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/summary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <com.myapp.pahtan.CustomTextView
            android:id="@+id/summaryName"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="ပဌာန်းအကျဉ်း"
            app:font="mm3.ttf"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="#00BFA5"
        android:id="@+id/detailCardView"
        android:layout_below="@+id/inviteCardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/detail"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <com.myapp.pahtan.CustomTextView
            android:id="@+id/detailName"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="ပဌာန်းအကျယ်"
            app:font="mm3.ttf"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:cardBackgroundColor="#673AB7"
        android:id="@+id/conclusionCard"
        android:layout_alignTop="@+id/detailCardView"
        android:layout_alignLeft="@+id/summaryCardView"
        android:layout_alignStart="@+id/summaryCardView">

        <ImageView
            android:id="@+id/conclusionImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/send"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <com.myapp.pahtan.CustomTextView
            android:id="@+id/sendName"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:background="?android:selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="နတ်ပို့"
            app:font="mm3.ttf"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />
    </android.support.v7.widget.CardView>
</RelativeLayout>